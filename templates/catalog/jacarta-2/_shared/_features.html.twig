{% if features is not defined %}
    {% set features = include('catalog/jacarta-2/_shared/_features.json.twig') | json_decode %}
{% endif %}

<h2>Особенности <span class="text-nowrap">{{ title }}</span></h2>

<div class="features row">
    {% for name, feature in features %}
        <div class="feature col-4">
            <div class="feature-title">
                <img src="{{ asset(feature.image) }}" width="64" height="64" alt="{{ feature.title }}" />
                <h4>{{ feature.title }}</h4>
            </div>
            <div class="feature-body">{{ feature.description | raw }}</div>
            {% if feature.view is defined %}
            <div class="feature-footer">
                <ul class="list-unstyled list-icons mb-0">
                    <li>
                        <ion-icon name="arrow-forward"></ion-icon>
                        <a href="{{ path('catalog:product:page', {'product': code, 'page': 'features', '_fragment': name}) }}" data-toggle="modal" data-target="#features-modal" data-remote="true">Подробнее ...</a>
                    </li>
                </ul>
            </div>
            {% endif %}
        </div>
    {% endfor %}
</div>

<div class="modal modal-features" id="features-modal" tabindex="-1" role="dialog" aria-labelledby="features-modal" aria-hidden="true"></div>