<div class="row justify-content-center text-center">
    {% for model in models %}
    {% if col is not defined %}
        {% set col = (models | length) > 4 ? 4 : 3 %}
    {% endif %}
    <div class="col-{{ col }} mb-4">
        <div class="card h-100 shadow-sm">
            <img class="card-img-top bg-secondary" src="{{ asset("images/catalog/jacarta/632x300/" ~ model.image ) }}" alt="{{ model.title }}" />
            <div class="card-body">
                {{ model.title }}
            </div>
        </div>
    </div>
    {% endfor %}
</div>