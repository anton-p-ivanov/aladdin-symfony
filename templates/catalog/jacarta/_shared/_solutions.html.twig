<h2>Сопутствующее ПО и решения</h2>

<div class="row">
    <div class="col-4 d-flex align-items-center justify-content-center">
        <img src="{{ asset('images/catalog/jacarta/300x150/JaCarta_XL_215_Black_Opened_Cap.png') }}" class="img-fluid" alt="JaCarta PKI. Сопутствующее ПО и решения" />
    </div>
    <div class="col-8">
        {% set solutions = include('catalog/jacarta/_shared/_solutions.json.twig') | json_decode %}
        {% for item in solutions %}
        <div class="row mb-2 align-items-center">
            <div class="col-6 d-flex align-items-center justify-content-center" style="min-height: 63px;background-color: {{ item.color | raw }}">
                <a class="text-body" href="{{ path(item.url.route, item.url.params) }}">{{ item.title }}</a>
            </div>
            <div class="col-6 small">{{ item.description }}</div>
        </div>
        {% endfor %}
    </div>
</div>