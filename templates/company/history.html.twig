{% extends 'main.html.twig' %}

{% block title %}История компании{% endblock %}

{% block content %}
    {% set years = [1998, 2001, 2002, 2003, 2004, 2005, 2006, 2007, 2008, 2009, 2010, 2011, 2012, 2013, 2014, 2015, 2016, 2017] | reverse %}
    {% set currentYear = app.request.get('year', years[0]) %}

    <div class="nav nav-pills" role="menu">
    {% for year in years %}
        <a href="{{ path('company:history', {'year': year}) }}" class="px-4 py-3 mr-1 mb-1 nav-item nav-link{{ year == currentYear ? ' active': ' bg-light' }}">
            {{ year }}
        </a>
    {% endfor %}
    </div>

    <hr />

    {{ include('company/history/' ~ currentYear ~ '.html.twig') }}
{% endblock %}

{% block sidebar %}
    {{ include('company/_sidebar.html.twig') }}
{% endblock %}