<div class="form-group">
    <label for="name">Поиск партнёра в городе <a href="#extended-search" data-toggle="collapse" data-update="city">Москва</a></label>
    <div class="input-group">
        {{ form_widget(form.name, {'attr': {'placeholder': 'Введите название компании или его часть'}}) }}
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Найти</button>
        </div>
    </div>
    {{ form_errors(form.name) }}
    <div class="small mt-2">
        <a href="#extended-search" data-toggle="collapse">Расширенный поиск</a>
    </div>
</div>

<div class="collapse" id="extended-search">
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                {{ form_label(form.product, 'Продукт или решение') }}
                {{ form_widget(form.product, {'placeholder': '- Любой продукт или решение -', 'attr': {'class': 'custom-select'}}) }}
                {{ form_errors(form.product) }}
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                {{ form_label(form.statuses, 'Партнёрский статус') }}
                {{ form_widget(form.statuses, {'placeholder': '- Любой статус -', 'attr': {'class': 'custom-select'}}) }}
                {{ form_errors(form.statuses) }}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                {{ form_label(form.country, 'Страна') }}
                {{ form_widget(form.country, {'placeholder': '- Любая страна -', 'attr': {'class': 'custom-select'}}) }}
                {{ form_errors(form.country) }}
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                {{ form_label(form.city, 'Город') }}
                {{ form_widget(form.city, {'placeholder': '- Любой город -', 'attr': {'class': 'custom-select'}}) }}
                {{ form_errors(form.city) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        {{ form_widget(form.recommended) }}
        {{ form_errors(form.recommended) }}
        <small class="d-block text-muted mt-1">
            Статус "Рекомендованный партнёр" подтверждает наличие в компании партнёра одного или нескольких сертифицированных специалистов.
        </small>
    </div>

    <div class="form-group d-none">
        {{ form_label(form.method, 'Способ продвижения') }}
        {{ form_widget(form.method, {'placeholder': '- Любой способ продвижения -', 'attr': {'class': 'custom-select'}}) }}
        {{ form_errors(form.method) }}
    </div>
</div>
