<div class="partner d-flex justify-content-between align-items-center py-3 border-white" style="flex:0 0 50%">
    <div class="partner__card">
        <div class="partner__title font-weight-bold">
            {% if partner.values.URL %}
                <a href="{{ partner.values.URL }}" target="_blank">{{ partner.title | upper }}</a>
            {% else %}
                {{ partner.title | upper }}
            {% endif %}
        </div>
        <div class="partner__statuses">
            <span>{{ partner.values.STATUSES | join(', ') }}</span>{% if partner.values.RECOMMENDED == 1 %}, <span class="text-primary">Рекомендованный партнёр</span>{% endif %}
        </div>
        <div class="partner__address">
            {{ partner.values.CITY }},
            {{ partner.values.STATE ? partner.values.STATE ~ ', ' : '' }}
            {{ partner.values.STREET }}
        </div>
        <div class="partner__phone">{{ partner.values.PHONE }}</div>
    </div>
</div>